{% extends 'admin/base.html.twig' %}

{% block title %}Transactions de {{ user.username }}{% endblock %}

{% block body %}
<div class="container-fluid px-0">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 text-gray-900 mb-0">
                <i class="fas fa-exchange-alt text-primary me-2"></i>
                Transactions de {{ user.username }}
            </h1>
            <p class="text-muted mb-0">Toutes les transactions de cet utilisateur</p>
        </div>
        <div>
            <a href="{{ path('admin_users') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour aux utilisateurs
            </a>
            <a href="{{ path('admin_user_wallets', {id: user.id}) }}" class="btn btn-primary">
                <i class="fas fa-wallet me-2"></i>Voir le portefeuille
            </a>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                Historique des transactions ({{ transactions|length }} transactions)
            </h5>
        </div>
        <div class="card-body p-0">
            {% if transactions|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Date</th>
                            <th>Crypto</th>
                            <th>Type</th>
                            <th>Quantité</th>
                            <th>Prix</th>
                            <th>Total</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for transaction in transactions %}
                        <tr>
                            <td>
                                <div class="fw-bold">{{ transaction.createdAt|date('d/m/Y') }}</div>
                                <small class="text-muted">{{ transaction.createdAt|date('H:i:s') }}</small>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="crypto-icon me-2">
                                        <i class="fab fa-bitcoin text-warning"></i>
                                    </div>
                                    <div>
                                        <span class="badge bg-primary">{{ transaction.crypto.symbol }}</span>
                                        <div><small class="text-muted">{{ transaction.crypto.name }}</small></div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                {% if transaction.type == 'achat' %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-plus me-1"></i>Achat
                                    </span>
                                {% elseif transaction.type == 'vente' %}
                                    <span class="badge bg-warning">
                                        <i class="fas fa-minus me-1"></i>Vente
                                    </span>
                                {% else %}
                                    <span class="badge bg-info">
                                        <i class="fas fa-exchange-alt me-1"></i>{{ transaction.type|title }}
                                    </span>
                                {% endif %}
                            </td>
                            <td class="fw-bold">{{ transaction.amount|number_format(8, '.', '') }}</td>
                            <td>{{ transaction.priceAtTransaction|number_format(2, ',', ' ') }}€</td>
                            <td class="fw-bold text-primary">{{ transaction.totalValue|number_format(2, ',', ' ') }}€</td>
                            <td>
                                {% if transaction.isVisible %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-eye me-1"></i>Visible
                                    </span>
                                {% else %}
                                    <span class="badge bg-danger">
                                        <i class="fas fa-eye-slash me-1"></i>Masquée
                                    </span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="fas fa-exchange-alt fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Aucune transaction trouvée</h5>
                <p class="text-muted mb-0">Cet utilisateur n'a effectué aucune transaction pour le moment.</p>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
