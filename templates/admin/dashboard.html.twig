{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard - Backoffice Crypto{% endblock %}
{% block page_title %}Dashboard{% endblock %}
{% block page_subtitle %}Vue d'ensemble de votre empire crypto{% endblock %}

{% block body_content %}
<!-- Statistics Cards -->
<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
    <div class="stats-card" data-crypto="users">
        <div class="stats-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="stats-value">{{ totalUsers }}</div>
        <div class="stats-label">Utilisateurs</div>
    </div>
    
    <div class="stats-card" data-crypto="cryptos">
        <div class="stats-icon">
            <i class="fas fa-coins"></i>
        </div>
        <div class="stats-value">{{ totalCryptos }}</div>
        <div class="stats-label">Cryptomonnaies</div>
    </div>
    
    <div class="stats-card" data-crypto="wallets">
        <div class="stats-icon">
            <i class="fas fa-wallet"></i>
        </div>
        <div class="stats-value">{{ activeWallets|length }}</div>
        <div class="stats-label">Portefeuilles actifs</div>
    </div>
    
    <div class="stats-card" data-crypto="value">
        <div class="stats-icon">
            <i class="fas fa-euro-sign"></i>
        </div>
        <div class="stats-value">{{ (totalSystemValue / 1000)|number_format(0) }}K€</div>
        <div class="stats-label">Valeur totale système</div>
    </div>
</div>

<!-- Main Content Grid -->
<div style="display: grid; grid-template-columns: 2fr 1fr; gap: 1.5rem; margin-bottom: 2rem;">
    <!-- Recent Transactions -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">
                <i class="fas fa-exchange-alt" style="margin-right: 0.5rem;"></i>
                Transactions récentes
            </h2>
        </div>
        <div class="card-body" style="padding: 0;">
            <div style="overflow-x: auto;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Utilisateur</th>
                            <th>Crypto</th>
                            <th>Type</th>
                            <th>Montant</th>
                            <th>Valeur</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for transaction in recentTransactions %}
                        <tr>
                            <td style="font-weight: 500;">{{ transaction.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <a href="{{ path('admin_user_wallets', {'id': transaction.user.id}) }}" 
                                   style="color: var(--primary-color); text-decoration: none; font-weight: 500;">
                                    {{ transaction.user.username }}
                                </a>
                            </td>
                            <td>
                                <span class="badge badge-primary">{{ transaction.crypto.symbol }}</span>
                            </td>
                            <td>
                                <span class="badge badge-{% if transaction.type == 'achat' %}success{% elseif transaction.type == 'vente' %}warning{% else %}primary{% endif %}">
                                    {{ transaction.typeLabel }}
                                </span>
                            </td>
                            <td class="crypto-price">{{ transaction.amount|number_format(8, '.', '') }}</td>
                            <td class="crypto-price">{{ transaction.totalValue|number_format(2, ',', ' ') }}€</td>
                            <td>
                                {% if transaction.isVisible %}
                                    <span class="badge badge-success">Visible</span>
                                {% else %}
                                    <span class="badge badge-danger">Masquée</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="7" style="text-align: center; color: var(--gray-600); padding: 2rem;">
                                Aucune transaction récente
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Active Wallets -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">
                <i class="fas fa-wallet" style="margin-right: 0.5rem;"></i>
                Portefeuilles actifs
            </h2>
        </div>
        <div class="card-body">
            {% for wallet in activeWallets|slice(0, 8) %}
            <div style="display: flex; justify-content: space-between; align-items: center; padding: 0.75rem 0; border-bottom: 1px solid var(--gray-200);">
                <div>
                    <div style="font-weight: 600; color: var(--gray-900);">{{ wallet.user.username }}</div>
                    <div style="font-size: 0.8125rem; color: var(--gray-600);">{{ wallet.crypto.symbol }}</div>
                </div>
                <div style="text-align: right;">
                    <div class="crypto-price">{{ wallet.balance|number_format(4, '.', '') }}</div>
                    <div style="font-size: 0.8125rem; color: var(--gray-600);">{{ wallet.currentValue|number_format(2, ',', ' ') }}€</div>
                </div>
            </div>
            {% else %}
            <div style="text-align: center; color: var(--gray-600); padding: 2rem;">
                Aucun portefeuille actif
            </div>
            {% endfor %}
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="card">
    <div class="card-header">
        <h2 class="card-title">
            <i class="fas fa-lightning-bolt" style="margin-right: 0.5rem;"></i>
            Actions rapides
        </h2>
    </div>
    <div class="card-body">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
            <a href="{{ path('admin_transfer_crypto') }}" class="btn btn-danger btn-lg" style="padding: 1.5rem; text-decoration: none; text-align: center;">
                <i class="fas fa-user-secret" style="display: block; font-size: 1.5rem; margin-bottom: 0.5rem;"></i>
                Transfert Secret
            </a>
            
            <a href="{{ path('admin_users') }}" class="btn btn-primary btn-lg" style="padding: 1.5rem; text-decoration: none; text-align: center;">
                <i class="fas fa-users" style="display: block; font-size: 1.5rem; margin-bottom: 0.5rem;"></i>
                Gérer Utilisateurs
            </a>
            
            <a href="{{ path('admin_cryptos') }}" class="btn btn-success btn-lg" style="padding: 1.5rem; text-decoration: none; text-align: center;">
                <i class="fas fa-coins" style="display: block; font-size: 1.5rem; margin-bottom: 0.5rem;"></i>
                Gérer Cryptos
            </a>
            
            <button class="btn btn-outline-primary btn-lg" onclick="updatePrices()" style="padding: 1.5rem;">
                <i class="fas fa-sync-alt" style="display: block; font-size: 1.5rem; margin-bottom: 0.5rem;"></i>
                Actualiser Prix
            </button>
        </div>
    </div>
</div>
{% endblock %}
